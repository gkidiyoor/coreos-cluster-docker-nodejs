[Unit]
Description=nodejs hello world
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill kidiyoor/centos6-nodejs-example
ExecStartPre=-/usr/bin/docker rm kidiyoor/centos6-nodejs-example
ExecStartPre=-/usr/bin/docker pull kidiyoor/centos6-nodejs-example

ExecStart=/usr/bin/docker run --name nodejshelloworld kidiyoor/centos6-nodejs-example /bin/sh -c "node /src/helloworld.js"
ExecStop=/usr/bin/docker stop kidiyoor/centos6-nodejs-example